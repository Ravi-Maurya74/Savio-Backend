{
    "builds": [
        {
            "src": "savio_backend/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb","runtime": "python3.9" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { "distDir": "static" }
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "savio_backend/wsgi.py" }
    ],
    "installCommand": "pip install -r requirements.txt --use-deprecated=legacy-resolver"
}